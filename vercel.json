{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "B2_KEY_ID": "@b2-key-id",
    "B2_APP_KEY": "@b2-app-key", 
    "B2_BUCKET_ID": "@b2-bucket-id",
    "B2_BUCKET_NAME": "@b2-bucket-name"
  }
} 